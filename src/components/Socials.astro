---
import { Icon } from "astro-icon/components";
import SocialLink from "./SocialLink.astro";

// Icons are quite uneven in sizes.
---

<nav class="flex items-center">
  <SocialLink href="" data-email-href="" label="Email me"><Icon name="mail" size="24px" /></SocialLink>
  <SocialLink href="https://v-thomas.com/github" label="My github profile"><Icon name="github" size="24px" /></SocialLink>
  <SocialLink href="https://v-thomas.com/x" label="My X (former twitter) profile"><Icon name="x" size="24px" /></SocialLink>
  <SocialLink href="https://v-thomas.com/linkedin" label="My LinkedIn profile"><Icon name="linkedin" size="24px" /></SocialLink>
</nav>

<style lang="scss">
  nav {
    display: flex;
    gap: 0.75rem;
  }

  [data-icon] {
    color: inherit;
  }
</style>
