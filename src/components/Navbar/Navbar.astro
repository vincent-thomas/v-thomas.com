---
import Socials from "../Socials.astro";
import { SITE_TITLE } from '../../consts';
import { Icon } from 'astro-icon/components';
import { button } from '../../static/cssts/button.css';
import {isPathActive} from "../../utils/isPathaActive";

const links = [
  { href: '/', text: 'Home' },
  { href: '/work', text: 'My work' },
  { href: '/logs', text: 'Developer log' },
  ];

export type Props = {
  overrideTitle?: string;
};

const {overrideTitle} = Astro.props;

---

<div id="root-navbar">
  <navbar>
    <a href="/" class="title-link">{!!overrideTitle ? overrideTitle : SITE_TITLE}</a>
    <div class="no-print">
      <button id="hamburger-handler" aria-label="Open menu">
        <Icon name="menu-right" />
      </button>
      <div id="nav">
        <div id="links">
          <ul>
            {links.map(({href, text}) =>
            <li>
              <a
                href={href}
                class:list={{
                  [button({underline: true })]: isPathActive(Astro.url.pathname, href),
                  [button({underline: false })]: !isPathActive(Astro.url.pathname, href)
                }}>{text}</a>
            </li>
            )}
          </ul>
          <div id="lets-connect">
            <Socials />
          </div>
        </div>
      </div>
    </div>
  </navbar>
  <div class="hidden" id="navbar-mobile-links">
    <ul>
      {links.map(link => <li><a href={link.href}>{link.text}</a></li>)}
    </ul>
    <p id="text">Let's connect</p>
    <Socials />
  </div>
</div>

<script src="./mobile-links.ts" />

<style lang="scss">
  navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  #nav {
    display: none;
    @media screen and (min-width: 64rem) {
      display: block;
    }

    #links {
      display: flex;
      flex-direction: row;
      gap: 3rem;

      #lets-connect {
        display: flex;
        gap: 1rem;
        flex-direction: column;
        justify-content: center;
      }

      ul {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1.5rem;
      }
    }
  }

  #hamburger-handler {
    padding: 0.75rem;
    font-weight: 700;
    color: var(--blue-12);
    border-radius: calc(infinity * 1px);
    font-size: 1.25rem;
    @media screen and (min-width: 64rem) {
      display: none;
    }

    &:hover {
      background-color: var(--blue-4);
    }
  }

  #navbar-mobile-links {
    margin-top: 1rem;
    padding: 1rem;
    background-color: var(--blue-3);
    border-radius: 0.5rem;
    @media screen and (min-width: 64rem) {
      display: none;
    }

    &.hidden {
      display: none;
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 1.5rem;

      li a {
        display: block;
        color: var(--blue-11);
        font-weight: 600;

        padding-inline: 1rem;
        padding-block: 0.75rem;

        border-radius: 0.375rem;

        &:hover {
          background-color: var(--blue-4);
        }
      }
    }

    #text {
      color: var(--blue-11);
      font-weight: 700;
      font-size: 1.875rem;
      margin-bottom: 0.25rem;
    }
  }

  a.title-link {
    font-weight: 700;
    margin-right: auto;
    color: var(--blue-12);
    padding-inline: 0.75rem;
    padding-block: 0.25rem;
    font-size: 1.25rem;
    border-radius: 0.5rem;
  }
</style>
