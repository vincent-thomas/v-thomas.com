---
import Socials from "../components/Socials.astro";
import {SITE_TITLE} from "../consts";
---

<footer>
  <hr />
  <section>
    <div class="lets-connect no-print">
      <h2>Let's connect!</h2>
      <p class="text">I'm always open to socialising!</p>
    </div>
    <div class="copyright">
      <Socials />
      <p>
        &copy; <span id="year">{new Date().getFullYear()}</span> {SITE_TITLE}. All rights reserved.
        <script>
          document.getElementById('year')!.textContent = new Date().getFullYear().toString();
        </script>
      </p>
    </div>
  </section>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;

    padding-bottom: 4rem;
  }

  hr {
    margin-bottom: 2.5rem;
    margin-top: 3.5rem;
  }

  section {
    display: flex;
    gap: 4rem;
    flex-direction: column;

    h2 {
      color: var(--blue-11);
      font-weight: 600;
      font-size: 2.25rem;
    }

    p {
      color: var(--gray-12);
    }

    .text {
      margin-top: 0.25rem;
    }

    .copyright {
      display: flex;
      justify-content: space-between;
    }
  }
</style>
