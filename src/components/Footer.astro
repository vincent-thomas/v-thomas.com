---
import Socials from "../components/Socials.astro";
import {SITE_TITLE} from "../consts";
const today = new Date().getFullYear();
---

<footer class="flex flex-col pb-16">
  <hr class="text-[var(--blue-indicator)] mb-10 mt-14" />
  <section class="flex flex-col lg:flex-row justify-between lg:items-end gap-4">
    <div>
      <h2 class="text-4xl text-[var(--blue-11)] font-semibold mb-3">Let's connect!</h2>
      <p class="mb-6 text-[var(--gray-12)]">I'm alwyas open to socialising!</p>
      <Socials />
    </div>
    <div>
      <p class="text-[var(--gray-12)]">
      &copy; <span id="year">{today}</span> {SITE_TITLE}. All rights reserved.
      </p>
      <script>
        document.getElementById('year')!.textContent = new Date().getFullYear().toString();
      </script>
    </div>
  </section>
</footer>
