---
import Socials from "../components/Socials.astro";
import {SITE_TITLE} from "../consts";
const today = new Date().getFullYear();
---

<footer>
  <hr />
  <section>
    <div class="no-print">
      <h2>Let's connect!</h2>
      <p>I'm always open to socialising!</p>
      <Socials />
    </div>
    <div>
      <p>
        &copy; <span id="year">{today}</span> {SITE_TITLE}. All rights reserved.
      </p>
      <script>
        document.getElementById('year')!.textContent = new Date().getFullYear().toString();
      </script>
    </div>
  </section>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;

    padding-bottom: 4rem;
  }

  hr {
    margin-bottom: 2.5rem;
    margin-top: 3.5rem;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    justify-content: space-between;

    h2 {
      color: var(--blue-11);
      font-weight: 600;
      font-size: 2.25rem;
      margin-bottom: 0.75rem;
    }

    p {
      color: var(--gray-12);
      margin-bottom: 1.5rem;
    }
  }
</style>
