---
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

import Global from "../../components/GlobalDropdownMenu.astro";
import Social from "../../components/NavSocialLink.astro"
import FormattedDate from "../../components/FormattedDate.astro";
import Body from "../../layouts/Body.astro";
import BackArrow from "~icons/material-symbols/arrow-left-alt-rounded";

import { slide } from 'astro:transitions';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

const posts = (await getCollection('article')).filter(post => !!post.data.pubDate).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );

  const postsWithoutContent = posts.map(post => ({
  ...post.data,
  content: undefined
  }))

---

<!doctype html>
<html lang="en">
	<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <div class="lg:my-24 my-8 flex flex-col gap-3 items-start">
      <a href="/" class="text-gray-400 hover:bg-gray-800 px-3 py-2 rounded-md inline-flex gap-3 items-center cursor-pointer" transition:name="back-btn"><Fragment set:html={BackArrow} /> Go back</a>
      <h1 class="text-white text-3xl md:text-5xl xl:text-7xl font-[800]">VT's Articles</h1>
      <p class="text-gray-400">Mostly focused on quite low level software-engineering stuff.</p>
    </div>
		<section class="md:grid flex flex-col md:grid-cols-2 gap-x-4 gap-y-10">
					{
						posts.map((post) => (
							<a href={`/articles/${post.id}`} class="post-link">
							  <article class="flex flex-col gap-1">
                  <Image width={720} height={360} src={post.data.heroImage} alt="" transition:name={`img-${post.data.title.replace(" ", "_")}`} />
									<h4 class="text-white font-semibold mt-4 post-title">{post.data.title}</h4>
                  <p class="text-gray-200">
										<FormattedDate date={post.data.pubDate} />
									</p>
                </article>
						  </a>
						))
					}
    </section>
    <script define:vars={{postsWithoutContent}}></script>
    <style>
      .post-link:hover .post-title {
        color: var(--blue-indicator);
        text-decoration: underline;
      }
    </style>
  </Body>
</html>

