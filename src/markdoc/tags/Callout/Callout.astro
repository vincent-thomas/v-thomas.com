---
interface Props {
  type: 'note' | 'warning' | 'error' | 'success';
}
const { type } = Astro.props;

import Info from "./info.svg";
---

<style>
  .callout {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    border-left: 4px solid;
    border-radius: 5px;
    margin: 1rem 0;
  }
  .note {
    border-color: #3b82f6;
    background: var(--blue-5);

    div {
      display: flex;
      gap: 0.85rem;
      span {
        color: var(--blue-11);
      }
      svg {
        color: var(--blue-11);
      }
    }
  }
  .warning { border-color: #f59e0b; background: #fffbeb; }
  .success { border-color: #10b981; background: #ecfdf5; }

  .title {
    font-weight: 600;
  }

  .content {
    color: var(--gray-12);
  }
</style>

<div class={`callout ${type}`}>
  <div>
    {type == "note" && <Info size={24} />}
    <span class="title">{type.toUpperCase()}</span>
  </div>
  <span class="content content-ignore">
    <slot />
  </span>
</div>
